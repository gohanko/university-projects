@page
@model MiniCinema.Pages.Ticketing.Viewer

@{
    ViewData["Title"] = "Showtimes";
}

<div class="container mt-3">
    <div class="row">
        <div class="col-md-2">
            <img
                src="@Model.Ticket.Session.Movie.ImageURL"
                width="100%"
            />
        </div>
        <div class="col-md-8">
            <div class="row">
                <div class="col-md-10">
                    <h1 class="card-title">@Model.Ticket.Session.Movie.Title</h1>
                    <p class="card-title">Runtime : @Model.Ticket.Session.Movie.RuntimeMinutes Minutes</p>
                    <p class="card-title">Cost (RM) : RM @Model.Ticket.PriceAmount</p>
                </div>

                <div class="col-md-2">
                    <img width="100%"
                         height="100%"
                         src="@Model.Base64QRUri" />
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-md-4">
                    <p class="card-text">
                        <img src="data:image/svg+xml;base64,"
                                width="40" />
                        @Model.Ticket.Session.Hall.Branch.Name
                    </p>
                    <p class="card-text">
                        <img src="data:image/svg+xml;base64,"
                                width="40" />
                        @Model.Ticket.Session.Hall.Type
                    </p>
                </div>
                <div class="col-md-4">
                    <p class="card-text">
                        <img src="data:image/svg+xml;base64,"
                             width="40" />
                        Hall Cinema - @Model.Ticket.Session.HallId
                    </p>
                    <p class="card-text">
                        <img src="data:image/svg+xml;base64,"
                             width="40" />
                        @Model.Ticket.Session.ShowingDate.ToLongDateString()
                    </p>
                </div>
                <div class="col-md-4">
                    <p class="card-text">
                        <img src="data:image/svg+xml;base64,"
                             width="40" />
                        @Model.Ticket.Session.ShowingDate.ToLongTimeString()
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
