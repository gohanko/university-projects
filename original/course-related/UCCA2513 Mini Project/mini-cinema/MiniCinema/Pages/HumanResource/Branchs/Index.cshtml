@page
@model MiniCinema.Pages.Brs.IndexModel

@{
    ViewData["Title"] = "Branch information";
}

<div class="container mt-3">
    <div class="row">
        <div class="col-md-3">
            <h3>Branch Info</h3>
        </div>
        <div class="col-md-9">
            <ul class="nav nav-pills nav-justified">
                <li class="nav-item">
                    <a class="nav-link active" asp-page="/HumanResource/Branchs/Index">Branchs Info</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-page="/HumanResource/Department/Index">Department Info</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-page="/HumanResource/HumanResources/Index">Staff Info</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-page="/HumanResource/Leave/Index">Leave Info</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-page="/HumanResource/Res/Index">Resign Info</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-page="/HumanResource/Menu/Index">Back to Menu</a>
                </li>
            </ul>
        </div>
    </div>

    <hr />

    <p>
        <a asp-page="Create">Create New Branchs Info Record</a>
    </p>

    <body style="background-color:#f7d2eb;">
    </body>

    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Branchs[0].BranchName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Branchs[0].Area)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Branchs[0].BranchManager)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Branchs[0].Postcode)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
    @foreach (var item in Model.Branchs) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.BranchName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Area)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BranchManager)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Postcode)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
                </td>
            </tr>
    }
        </tbody>
    </table>
</div>
