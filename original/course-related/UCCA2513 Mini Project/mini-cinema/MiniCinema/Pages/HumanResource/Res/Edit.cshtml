@page
@model MiniCinema.Pages.Res.EditModel

@{
    ViewData["Title"] = "Edit";
}

<div class="container mt-3">

    <h1>Edit</h1>

    <h4>Resign</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form method="post">
