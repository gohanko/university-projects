                </div>
                <div class="form-group">
                    <label asp-for="Resign.Age" class="control-label"></label>
                    <input asp-for="Resign.Age" class="form-control" />
                    <span asp-validation-for="Resign.Age" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Resign.ResignDate" class="control-label"></label>
