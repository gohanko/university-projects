                </div>
                <div class="form-group">
                    <label asp-for="Resign.LastSalary" class="control-label"></label>
                    <input asp-for="Resign.LastSalary" class="form-control" />
                    <span asp-validation-for="Resign.LastSalary" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
