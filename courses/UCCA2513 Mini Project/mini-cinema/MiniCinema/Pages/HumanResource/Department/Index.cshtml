@page
@model MiniCinema.Pages.Department.IndexModel

@{
    ViewData["Title"] = "Department information";
}

<div class="container mt-3">
    <div class="row">
        <div class="col-md-3">
            <h3>Department Info</h3>
        </div>
        <div class="col-md-9">
            <ul class="nav nav-pills nav-justified">
                <li class="nav-item">
                    <a class="nav-link" asp-page="/HumanResource/Branchs/Index">Branchs Info</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link active" asp-page="/HumanResource/Department/Index">Department Info</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-page="/HumanResource/HumanResources/Index">Staff Info</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-page="/HumanResource/Leave/Index">Leave Info</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-page="/HumanResource/Res/Index">Resign Info</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-page="/HumanResource/Menu/Index">Back to Menu</a>
                </li>
            </ul>
        </div>
    </div>

    <hr />

    <p>
        <a asp-page="Create">Create New Department Info Record</a>
    </p>

    <body style="background-color:#d4f7d2;">
    </body>

    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Department[0].DepartmentName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Department[0].DeapartmentDesciption)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
    @foreach (var item in Model.Department) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.DepartmentName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DeapartmentDesciption)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
                </td>
            </tr>
    }
        </tbody>
    </table>
</div>